<!DOCTYPE html>
<html>
  <head>
    <title>Riwayat Pemimpi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <!-- Bootstrap core CSS -->
    <link href="https://blackrockdigital.github.io/startbootstrap-heroic-features/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <%= stylesheet_link_tag "custom.css" %>

  </head>

  <body>
      <div class="container">
        <header>
          <% if signed_in? %>
            Signed in as: <%= current_user.email %>
            <%= button_to 'Sign out', sign_out_path, method: :delete %>
          <% end %>

          <div id="flash">
            <% flash.each do |key, value| %>
              <div class="flash <%= key %>"><%= value %></div>
            <% end %>
          </div>
        </header>

        <%= yield %>

      </div>
  </body>
</html>
